# editorconfig.org  https://editorconfig.org/
root = true

[*]
# Unix-style newlines with a newline ending every file
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PEP8 Style Guide indentation style: https://peps.python.org/pep-0008/
[*.py]
indent_style = space
indent_size = 4

# Yaml files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Docker
[{Dockerfile,Dockerfile.template}]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# Terraform
[*.{tf,tfvars}]
indent_size = 4
indent_style = space

# HCL
[*.hcl]
indent_size = 4
indent_style = space
